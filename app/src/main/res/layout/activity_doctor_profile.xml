<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cureinstant.cureinstant.activity.DoctorProfileActivity">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">

            <ImageView
                android:id="@+id/user_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cureinstant_bg" />

            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/user_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:src="@drawable/doctor_placeholder" />

            <RelativeLayout
                android:id="@+id/doctor_personal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_picture"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_name_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_name"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/doctor_name_title"
                    android:text="@string/doctor_name" />

                <TextView
                    android:id="@+id/doctor_sex_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_name_title"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Sex"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_sex"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_name_title"
                    android:layout_toRightOf="@id/doctor_sex_title"
                    android:text="Male" />

                <TextView
                    android:id="@+id/doctor_number_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_sex_title"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="Location"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_number"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_sex_title"
                    android:layout_toRightOf="@id/doctor_number_title"
                    android:text="Delhi, IN" />
            </RelativeLayout>

            <TextView
                android:id="@+id/doctor_timings_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_personal_details"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Timings" />

            <RelativeLayout
                android:id="@+id/doctor_timings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_timings_title"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_timings_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_horizontal"
                    android:text="09:00 AM - 11:00 AM | 05:00 PM - 06:30 PM"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_timings_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_timings_time"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_horizontal"
                    android:text="MON | TUE | WED | THU | FRI"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/doctor_practices_at_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_timings"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Practices At" />

            <RelativeLayout
                android:id="@+id/doctor_practices_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_practices_at_title"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_practices_at1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Ramanuj Clinic"
                    android:textColor="@color/bsp_text_color_primary_light" />

                <TextView
                    android:id="@+id/doctor_practices_at1_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_practices_at1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="BN-14, Kaushambi, Ghaziabad" />

                <TextView
                    android:id="@+id/doctor_practices_at2"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/doctor_practices_at1_address"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Ramanuj Clinic"
                    android:textColor="@color/bsp_text_color_primary_light" />

                <TextView
                    android:id="@+id/doctor_practices_at2_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_practices_at2"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="BN-14, Kaushambi, Ghaziabad" />

                <TextView
                    android:id="@+id/doctor_practices_at3"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_practices_at2_address"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Ramanuj Clinic"
                    android:textColor="@color/bsp_text_color_primary_light" />

                <TextView
                    android:id="@+id/doctor_practices_at3_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_practices_at3"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="BN-14, Kaushambi, Ghaziabad" />

            </RelativeLayout>

            <TextView
                android:id="@+id/doctor_specialisation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_practices_at"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Specialisation" />

            <RelativeLayout
                android:id="@+id/doctor_specialisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_specialisation_title"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_specialisation_item1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Dermatologist" />

                <TextView
                    android:id="@+id/doctor_specialisation_item2"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_specialisation_item1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="General practitioner" />

                <TextView
                    android:id="@+id/doctor_specialisation_item3"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_specialisation_item2"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:drawableLeft="@drawable/dot_shape"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:text="Cosmetologist" />

            </RelativeLayout>

            <TextView
                android:id="@+id/doctor_feedback_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_specialisation"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Feedback" />

            <RelativeLayout
                android:id="@+id/doctor_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_feedback_title"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_feedback_item1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/feedback_dummy" />

                <View
                    android:id="@+id/doctor_feedback_item1_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/doctor_feedback_item1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/doctor_feedback_item2"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_feedback_item1_divider"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/feedback_dummy" />

            </RelativeLayout>

            <TextView
                android:id="@+id/doctor_publication_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_feedback"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Publication" />

            <RelativeLayout
                android:id="@+id/doctor_publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_publication_title"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/doctor_publication_item1_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/post_title"
                    android:textColor="@color/bsp_text_color_primary_light" />

                <TextView
                    android:id="@+id/doctor_publication_item1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_publication_item1_title"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:maxLines="3"
                    android:text="@string/post_desc" />

                <View
                    android:id="@+id/doctor_publication_item1_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/doctor_publication_item1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/doctor_publication_item2_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_publication_item1_divider"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/post_title"
                    android:textColor="@color/bsp_text_color_primary_light" />

                <TextView
                    android:id="@+id/doctor_publication_item2"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_publication_item2_title"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:maxLines="3"
                    android:text="@string/post_desc" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.ButtonBarLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/doctor_follow_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Follow"
            android:textColor="@color/primary_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <Button
            android:id="@+id/doctor_book_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Book"
            android:textColor="@color/primary_text" />
    </android.support.v7.widget.ButtonBarLayout>
</FrameLayout>