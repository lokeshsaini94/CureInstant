<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cureinstant.cureinstant.activity.ProfileActivity">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cureinstant_bg" />

            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/user_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="-50dp"
                android:src="@drawable/doctor_placeholder" />

            <TextView
                android:id="@+id/user_name_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_picture"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_picture"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/user_name_title"
                android:text="@string/doctor_name" />

            <TextView
                android:id="@+id/user_dob_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="DOB"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_dob"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/user_dob_title"
                android:text="26/11/1994" />

            <TextView
                android:id="@+id/user_sex_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_dob_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Sex"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_sex"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_dob_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/user_sex_title"
                android:text="Male" />

            <TextView
                android:id="@+id/user_number_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_sex_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_number"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_sex_title"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/user_number_title"
                android:text="+91-9876543210" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
