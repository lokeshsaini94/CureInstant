<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cureinstant.cureinstant.AddRecordActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/close_add_record_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:id="@+id/close_add_record"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_clear"
            android:tint="@color/icons" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/select_icon_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close_add_record_appbar"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:text="Select Icon" />

    <LinearLayout
        android:id="@+id/add_record_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_icon_text"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_record_icon1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_appointments"
            android:tint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/add_record_icon2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/ic_records"
            android:tint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/add_record_icon3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:src="@drawable/ic_notifications"
            android:tint="@color/colorPrimary" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_record_icon_container"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/add_record_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Record Title"
            android:maxLines="3" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_record_title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_record_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_attachment" />

        <TextView
            android:id="@+id/add_record_image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="No record attached" />

    </LinearLayout>

    <Button
        android:id="@+id/add_record_button"
        style="?attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Add Record"
        android:textColor="@color/primary_text"
        android:textStyle="bold" />

</RelativeLayout>